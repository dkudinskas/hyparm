.syntax unified

.text
.arm

.global _start
_start:

/*
 * Set APSR.C (carry flag)
 */
MOV    r0, #0x80000000
ADDS   r0, r0, r0
MOV    r1, r0

/*
 * Result of ADC should be PC = (PC + 8) + 4
 */
MOV    r0, pc
ADCS   r1, pc, pc
BCC    fail
LSLSCS r0, r0, #1
ADDSCS r0, #9
CMP    r0, r1
BNE    fail
BKPT   #0

fail:
BKPT   #1
